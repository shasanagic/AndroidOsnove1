<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="com.example.sean.geoquiz.PitanjaActivity"
    tools:showIn="@layout/activity_pitanja">

    <EditText
        android:id="@+id/unesiPitanjeET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Unesite pitanje..."
        android:textAlignment="center"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="32dp" />

    <Button
        android:id="@+id/dodajPitanjeBTN"
        android:layout_width="207dp"
        android:layout_height="48dp"
        android:text="Dodaj pitanje"
        tools:layout_editor_absoluteX="89dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/unesiPitanjeET" />

    <EditText
        android:id="@+id/PrikaziPitanjeET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="..."
        android:textAlignment="center"
        tools:layout_editor_absoluteX="85dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dodajPitanjeBTN" />
</android.support.constraint.ConstraintLayout>
